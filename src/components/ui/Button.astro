---
import type { HTMLAttributes } from "astro/types"

type Props = HTMLAttributes<"button">

const { class: className, ...attrs } = Astro.props
---

<button
  class=`flex w-fit flex-row items-center gap-1 rounded-md bg-blue-700 p-2 leading-3 text-white ${className}`
  {...attrs}
>
  <slot />
</button>
