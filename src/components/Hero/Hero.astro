---
import GemIcon from "@/components/icons/Gem.astro"
import GlobeIcon from "@/components/icons/Globe.astro"
import Badge from "@/components/ui/Badge.astro"

import HeroFooter from "./_HeroFooter.astro"
---

<section class="grid w-full grid-flow-row grid-cols-3 gap-6">
  <article class="col-span-2 flex w-fit flex-col justify-between">
    <div>
      <header>
        <h1 class="text-3xl font-bold">Farias Lautaro</h1>
        <h2 class="text-md">Backend Developer con +3 años de experiencia.</h2>
      </header>

      <section class="hidden flex-row gap-2 sm:flex">
        <Badge>
          <GlobeIcon slot="icon" />
          <span>Buenos Aires, Argentina</span>
        </Badge>
        <Badge>
          <GemIcon slot="icon" />
          <span>21 años</span>
        </Badge>
      </section>
    </div>
  </article>

  <figure class="row-span-2 flex justify-end">
    <img
      class="aspect-square w-full max-w-32 md:max-w-40"
      src="/src/images/Person.svg"
      alt="Farias Lautaro"
    />
  </figure>

  <HeroFooter class="col-span-3 flex items-end sm:col-span-2" />
</section>
