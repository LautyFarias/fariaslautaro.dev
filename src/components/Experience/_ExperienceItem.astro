---
import Dot from "@/components/icons/Dot.astro"
import ExperienceDescription from "@/components/ui/ExperienceDescription.astro"
import ExperienceHeader from "@/components/ui/ExperienceHeader.astro"
import ExperienceSeparator from "./_ExperienceSeparator.astro"

interface Props {
  position: string
  description: string
  dateRange: string
}

const { position, description, dateRange } = Astro.props
---

<div class="w-full">
  <ExperienceHeader dateRange={dateRange}>
    <Dot /><h4 class="font-light">{position}</h4>
  </ExperienceHeader>
  <section class="flex flex-row gap-2">
    <ExperienceSeparator class="h-auto" />
    <ExperienceDescription>{description}</ExperienceDescription>
  </section>
</div>
