---
import DotFilled from "@/components/icons/DotFilled.astro"
import ExperienceHeader from "./_ExperienceHeader.astro"

interface Props {
  company: string
  yearRange: string
}

const { company, yearRange } = Astro.props
---

<div class="flex w-full flex-col items-start">
  <ExperienceHeader dateRange={yearRange}>
    <DotFilled /><h3 class="text-xl font-medium">
      {company}
    </h3>
  </ExperienceHeader>
  <section class="flex flex-col">
    <slot />
  </section>
</div>
