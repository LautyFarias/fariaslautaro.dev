---
import Badge from "@/components/ui/Badge.astro"
import Button from "@/components/ui/Button.astro"

import GemIcon from "@/components/icons/Gem.astro"
import GitHubIcon from "@/components/icons/GitHub.astro"
import GlobeIcon from "@/components/icons/Globe.astro"
import LinkedInIcon from "@/components/icons/LinkedIn.astro"
import ReaderIcon from "@/components/icons/Reader.astro"

const gitHub = "https://github.com/LautyFarias",
  linkedIn = "https://www.linkedin.com/in/lautaro-farias"
---

<section class="flex w-full flex-row justify-between">
  <article class="flex w-fit flex-col justify-between">
    <div>
      <header>
        <h1 class="text-3xl font-medium">Farias Lautaro</h1>
        <h2 class="text-md">Backend Developer con +3 años de experiencia.</h2>
      </header>

      <section class="flex flex-row gap-2">
        <Badge><GlobeIcon /><span>Buenos Aires, Argentina</span></Badge>
        <Badge><GemIcon /><span>21 años</span></Badge>
      </section>
    </div>

    <section class="flex flex-row gap-2">
      <Button aria-label="GitHub">
        <a aria-label="Ve mi perfil de GitHub" href={gitHub} target="_blank">
          <GitHubIcon />
        </a>
      </Button>
      <Button aria-label="LinkedIn">
        <a
          aria-label="Ve mi perfil de LinkedIn"
          href={linkedIn}
          target="_blank"
        >
          <LinkedInIcon />
        </a>
      </Button>
      <Button><ReaderIcon /><span>Descargar CV</span></Button>
    </section>
  </article>

  <aside class="size-md flex">
    <img
      class="aspect-square w-full max-w-40"
      src="/src/images/Person.svg"
      alt="Farias Lautaro"
    />
  </aside>
</section>
