---
import Badge from "@/core/ui/Badge.astro"
import { Paragraph, TextVariant } from "@/core/ui/text"
import type { Project } from '../types/projectsTypes'

interface Props {
  project: Project
}

const { project } = Astro.props
const { name, description, url, keywords, highlights, roles } = project
---

<article class="flex flex-col gap-4">
  <header class="flex flex-col gap-2">
    <h3 class="text-xl font-medium">
      <a href={url} target="_blank" class="hover:underline">
        {name}
      </a>
    </h3>
    <div class="flex flex-wrap gap-2">
      {roles.map(role => (
        <Badge>{role}</Badge>
      ))}
    </div>
  </header>
  
  <Paragraph variant={TextVariant.Secondary}>
    {description}
  </Paragraph>
  
  <section class="flex flex-col gap-2">
    <h4 class="font-medium">Tecnolog√≠as:</h4>
    <div class="flex flex-wrap gap-2">
      {keywords.map(keyword => (
        <Badge>{keyword}</Badge>
      ))}
    </div>
  </section>
  
  {highlights.length > 0 && (
    <section class="flex flex-col gap-2">
      <h4 class="font-medium">Destacados:</h4>
      <ul class="list-disc list-inside space-y-1">
        {highlights.map(highlight => (
          <li class="text-sm text-gray-600">{highlight}</li>
        ))}
      </ul>
    </section>
  )}
</article> 
