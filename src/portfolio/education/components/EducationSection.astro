---
import ExperienceHeader from "@/core/ui/ExperienceHeader.astro"
import Section from "@/core/ui/Section.astro"
import { Paragraph, TextVariant } from "@/core/ui/text"
import type { Education } from '../types/educationTypes'

interface Props {
  education: Education[]
}

const { education } = Astro.props
